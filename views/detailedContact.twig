{% extends 'layout.twig' %}

{% block body %}
<aside class=" col-12 card mb-3">
    <div class="row">
        
        <div class="col-11">
            <div class="row">
                <div class="col-12 card-header">
                    <div class="row">
                        <div class="col-3 header-author">{{contact.firstname}}</div>
                        <div class="col-3 header-author">{{contact.lastname}}</div>
                        <div class="col-6 text-right header-title"> ajouté le {{contact.addedDate}}</div>
                    </div>
                </div>
                <div class="col-12 card-content" >
                        <div class="row">
                            {% if contact.avatar %}
                                <figure class="col-12">
                                    <img src="{{ contact.avatar }}"/>
                                    <figcaption><a href="{{ contact.avatar  }}" target="_blank">{{ contact.avatar  }}</a></figcaption>
                                </figure>
                            {% else %}
                                <figure class="col-12">
                                    <img src=" https://cdn.pixabay.com/photo/2017/06/09/23/22/people-2388584_960_720.png"/>
                                </figure>
                            {% endif %}
                                                  
                            <ul>
                                <li>Prénom : {{ contact.firstname }}</li>
                                <li>Nom :{{ contact.lastname }}</li>
                                <li>{{ contact.description }}</li>
                                <li>{{ contact.mail }}</li>
                                <li>{{ contact.telephone }}</li>
                            </ul>
                        </div>

                </div>
                <div class="col-12 card-footer">
                    <div class="row">
                    <p id="message"></p>
                    <button id='supprimer' type="submit">supprimer</button>
                    </div>
                </div>
            </div>
            {% include "modifContact.twig" %}
        </div>
    </div>
</aside>

{% endblock %}